<div class="bd-example">
  <table class="table">

    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">username</th>
        <th scope="col">phone</th>
        <th scope="col">datestamp</th>
        <th scope="col">barber</th>
        <th scope="col">color</th>
      </tr>
    </thead>

    <tbody>
      <% @i = 0 %>
      <% @arr.each do |row| %>      
      <% @i += 1 %>
        <tr>
          <th scope='row'><%= @i %></th>       
          <td><%= row['username'] %></td>
          <%= "<td> #{row['phone']} </td>" %> # можно так
          <td><%= row['datestamp'] %></td>
          <td><%= row['barber'] %></td>
          <td><%= row['color'] %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<%# scope="row" %>